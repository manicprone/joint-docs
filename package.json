{
  "name": "joint-docs",
  "version": "0.0.2",
  "description": "Joint Kit | Guide & API Reference",
  "author": "|M| <manicprone@gmail.com>",
  "license": "MIT",
  "main": "dist/server.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:manicprone/joint-docs.git"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development babel-node src/server.js",
    "prebuild": "rm -rf dist/*",
    "copy-assets": "cp -R src/components src/content src/pages src/styles dist/",
    "build": "babel src -d dist && npm run copy-assets",
    "prestart": "npm run build",
    "start": "NODE_ENV=production node dist/server.js",
    "lint": "eslint ./ --cache --ignore-pattern .gitignore",
    "precommit-message": "echo 'Pre-commit checks (linting)...' && exit 0"
  },
  "pre-commit": [
    "precommit-message",
    "lint"
  ],
  "dependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.5.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "body-parser": "^1.20.1",
    "compression": "^1.7.1",
    "cookie-parser": "^1.4.3",
    "express": "^4.18.2",
    "lodash": "4.17.15",
    "nunjucks": "^3.0.1",
    "serve-favicon": "^2.4.5"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-register": "^6.24.1",
    "cross-env": "^5.1.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.3.0",
    "pre-commit": "^1.2.2"
  }
}
